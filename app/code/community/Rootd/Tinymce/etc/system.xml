<config>
    <tabs>
        <rootd translate="label" module="pulse">
            <label>Rootd Extensions</label>
            <sort_order>250</sort_order>
        </rootd>
    </tabs>
    <sections>
        <tinymce translate="label" module="tinymce">
            <label>Enhanced TinyMCE</label>
            <tab>rootd</tab>
            <frontend_type>text</frontend_type>
            <sort_order>250</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>TinyMCE Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <use_store_css translate="label">
                            <label>Use Store CSS</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment><![CDATA[When enabled, allows TinyMCE to render content using store-based styles.]]></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_store_css>
                        <custom_css translate="label">
                            <label>Custom CSS</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[A URI to a custom stylesheet to apply to the TinyMCE instance.]]></comment>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_css>
                        <!-- @todo Future support for customizing plugins
                        <plugins translate="label">
                            <label>Plugins</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Adds additional features to TinyMCE. Separate multiple plugins with commas.]]></comment>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </plugins>
                        -->
                    </fields>
                </general>
                <codemirror translate="label">
                    <label>CodeMirror Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <mode_js translate="label">
                            <label>Syntax Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tinymce/system_config_source_codemirror_mode</source_model>
                            <comment><![CDATA[Provides syntax highlighting for the editor.]]></comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mode_js>
                        <plugins translate="label">
                            <label>Plugins</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Adds additional features to the code editor. Separate multiple plugins with commas.]]></comment>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </plugins>
                    </fields>
                </codemirror>
            </groups>
        </tinymce>
    </sections>
</config>